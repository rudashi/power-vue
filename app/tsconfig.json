{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "composite": true,
        "incremental": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue",
        "../../packages/powervue/src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
